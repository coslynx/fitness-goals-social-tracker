{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "types": [
      "next-auth",
      "node",
      "react",
      "react-dom"
    ],
    "plugins": [
      {
        "name": "next-plugin-css-module",
        "options": {
          "experimental": {
            "cssModule": true
          }
        }
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@middleware/*": [
        "src/middleware/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "next.config.js",
    "tailwind.config.js",
    "prisma/schema.prisma",
    "jest.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "cypress",
    ".next"
  ]
}